{
  "name": "OpenAI Base",
  "hidden": true,
  "json_variables": {
    "MODEL": "model_name"
  },
  "user_variables": ["API_KEY"],
  "endpoint": "https://api.openai.com/v1/chat/completions",
  "request_type": "POST",
  "request_headers": {
    "Authorization": "Bearer {{API_KEY}}",
    "Content-Type": "application/json"
  },
  "request_body": {
    "model": "{{MODEL}}",
    "messages": [
      {
        "role": "user",
        "content": "{{PROMPT}}"
      }
    ]
  },
  "response_jsonpath": "$.choices[*].message.content"
}
